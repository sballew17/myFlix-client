html, body {
  font-size: 20px;
  font-family: "Cormorant Garamond", serif;
  background: black;
  background: linear-gradient(90deg, black 0%, #434343 35%);
  margin: 0;
  padding: 0;
  height: 100%;
  position: relative;
}

.btn {
  background-color: #8E0E00;
}

.btn:hover {
  background-color: black !important;
}

.app-name {
  color: #8E0E00;
  font-weight: bold;
}